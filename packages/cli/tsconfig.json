{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "types": ["vitest"],
    "isolatedModules": false
  },
  "include": ["src/**/*.ts", "vitest/globals", "global.d.ts"],
  "exclude": ["node_modules"]
}
